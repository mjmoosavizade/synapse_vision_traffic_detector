<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>synapse_vision_traffic_detector</name>
  <version>0.0.1</version>
  <description>ROS 2 C++ package for real-time traffic sign detection using a YOLOv8 ONNX model with OpenCV DNN.</description>
  <maintainer email="mjmoosavizade@gmail.com">MJ Moosavizade</maintainer>
  <license>Apache-2.0</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <!-- This dependency is CRITICAL for message generation -->
  <buildtool_depend>rosidl_default_generators</buildtool_depend>

  <depend>rclcpp</depend>
  <depend>std_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>cv_bridge</depend>
  <depend>builtin_interfaces</depend>
  <depend>opencv</depend>

  <!-- This tag is CRITICAL for telling the system this package has interfaces -->
  <member_of_group>rosidl_interface_packages</member_of_group>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
